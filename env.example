# Database Configuration
# Use your Supabase database URL here
# DATABASE_URL="your-supabase-database-url"

# Next.js Configuration
NODE_ENV="development"
NEXT_PUBLIC_BUNKER_SERVER_URL="http://localhost:3001"

# Nostr Configuration
NOSTR_RELAYS="wss://relay.nsec.app"

# Supabase Configuration (if using Supabase)
# NEXT_PUBLIC_SUPABASE_URL="your-supabase-url"
# NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
# SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"



# Application Configuration
PORT=3000
BUNKER_SERVER_PORT=3001

# OpenBunker Frontend URL (for community requests)
NEXT_PUBLIC_OPENBUNKER_URL="http://localhost:3000"

# Nostr Relay Configuration
NEXT_PUBLIC_BUNKER_RELAYS="wss://relay.nsec.app"

# Main Bunker Configuration
BUNKER_NSEC="your-main-bunker-private-key"
BUNKER_NPUB="your-main-bunker-public-key"


# Resend API key for sending emails
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Community identifier for filtering events
COMMUNITY_IDENTIFIER="your-community-identifier"

# Comma-separated list of email addresses to notify for new requests
NOTIFICATION_EMAILS="admin@example.com,moderator@example.com"
